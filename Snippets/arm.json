{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "vmNamePrefix": {
        "type": "string",
        "metadata": {
          "description": "Prefix for the virtual machine names."
        }
      },
      "dnsServer1": {
        "type": "string",
        "metadata": {
          "description": "DNS server 1."
        }
      },
      "dnsServer2": {
        "type": "string",
        "metadata": {
          "description": "DNS server 2."
        }
      }
    },
    "variables": {
      "vmCount": 2
    },
    "resources": [
      {
        "type": "Microsoft.Compute/virtualMachines",
        "name": "[concat(parameters('vmNamePrefix'), copyindex())]",
        "apiVersion": "2020-12-01",
        "location": "[resourceGroup().location]",
        "copy": {
          "name": "virtualMachineLoop",
          "count": "[variables('vmCount')]"
        },
        "properties": {
          "hardwareProfile": {
            "vmSize": "Standard_DS2_v2"
          },
          "osProfile": {
            "computerName": "[concat(parameters('vmNamePrefix'), copyindex())]",
            "adminUsername": "adminuser",
            "adminPassword": "adminpassword"
          },
          "storageProfile": {
            "imageReference": {
              "publisher": "MicrosoftWindowsServer",
              "offer": "WindowsServer",
              "sku": "2019-Datacenter",
              "version": "latest"
            },
            "osDisk": {
              "createOption": "FromImage"
            }
          },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmNamePrefix'), copyindex(), '-nic'))]"
              }
            ]
          },
          "diagnosticsProfile": {
            "bootDiagnostics": {
              "enabled": true,
              "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts', 'mystorageaccount'), '2019-06-01').primaryEndpoints.blob]"
            }
          }
        }
      },
      {
        "type": "Microsoft.Network/networkInterfaces",
        "name": "[concat(parameters('vmNamePrefix'), copyindex(), '-nic')]",
        "apiVersion": "2020-11-01",
        "location": "[resourceGroup().location]",
        "copy": {
          "name": "networkInterfaceLoop",
          "count": "[variables('vmCount')]"
        },
        "dependsOn": [
          "[concat('Microsoft.Compute/virtualMachines/', parameters('vmNamePrefix'), copyindex())]"
        ],
        "properties": {
          "ipConfigurations": [
            {
              "name": "ipconfig1",
              "properties": {
                "subnet": {
                  "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'myvnet', 'default')]"
                },
                "privateIPAllocationMethod": "Dynamic",
                "publicIPAddress": {
                  "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('vmNamePrefix'), copyindex(), '-publicip'))]"
                }
              }
            }
          ]
        }
      },
      {
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[concat(parameters('vmNamePrefix'), copyindex(), '-publicip')]",
        "apiVersion": "2020-11-01",
        "location": "[resourceGroup().location]",
        "copy": {
          "name": "publicIPAddressLoop",
          "count": "[variables('vmCount')]"
        },
        "dependsOn": [
          "[concat('Microsoft.Network/networkInterfaces/', parameters('vmNamePrefix'), copyindex(), '-nic')]"
        ],
        "properties": {
          "publicIPAllocationMethod": "Dynamic"
        }
      },
      {
        "type": "Microsoft.Network/dnszones",
        "name": "[concat('mydnszone.', variables('vmCount'))]",
        "apiVersion": "2021-02-01",
        "location": "[resourceGroup().location]",
        "copy": {
          "name": "dnsZoneLoop",
          "count": "[variables('vmCount')]"
        },
        "properties": {}
      },
      {
        "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
        "name": "[concat('mydnszone.', variables('vmCount'), '/virtualNetworkLink')]",
        "apiVersion": "2021-02-01",
        "location": "[resourceGroup().location]",
        "copy": {
          "name": "dnsZoneLinkLoop",
          "count": "[variables('vmCount')]"
        },
        "dependsOn": [
          "[concat('Microsoft.Network/dnszones/mydnszone.', variables('vmCount'))]",
          "[concat('Microsoft.Network/networkInterfaces/', parameters('vmNamePrefix'), copyindex(), '-nic')]"
        ],
        "properties": {
          "virtualNetwork": {
            "id": "[resourceId('Microsoft.Network/virtualNetworks', 'myvnet')]"
          }
        }
      }
    ]
  }
  