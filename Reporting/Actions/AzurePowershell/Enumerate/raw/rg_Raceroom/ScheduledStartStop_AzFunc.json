{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "scheduledqueryrules_ScheduledStartStop_AzFunc_name": {
      "defaultValue": "ScheduledStartStop_AzFunc",
      "type": "String"
    },
    "components_AIRaceroom_externalid": {
      "defaultValue": "/subscriptions/489d031c-25dc-4c75-9be4-cf094616e087/resourceGroups/rg_Raceroom/providers/Microsoft.Insights/components/AIRaceroom",
      "type": "String"
    },
    "actionGroups_StartStopV2_VM_Notification_externalid": {
      "defaultValue": "/subscriptions/489d031c-25dc-4c75-9be4-cf094616e087/resourceGroups/rg_Raceroom/providers/Microsoft.Insights/actionGroups/StartStopV2_VM_Notification",
      "type": "String"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "microsoft.insights/scheduledqueryrules",
      "apiVersion": "2023-03-15-preview",
      "name": "[parameters('scheduledqueryrules_ScheduledStartStop_AzFunc_name')]",
      "location": "eastus",
      "tags": {
        "hidden-link:/subscriptions/489d031c-25dc-4c75-9be4-cf094616e087/resourceGroups/rg_Raceroom/providers/Microsoft.Insights/components/AIRaceroom": "Resource"
      },
      "properties": {
        "description": "Start/Stop VMs during off-hours : Scheduled azure function has attempted an action",
        "severity": 4,
        "enabled": true,
        "evaluationFrequency": "PT5M",
        "scopes": [
          "[parameters('components_AIRaceroom_externalid')]"
        ],
        "windowSize": "PT5M",
        "criteria": {
          "allOf": [
            {
              "query": "traces\n| where (operation_Name contains \"Scheduled\")\n| where ( message hasprefix \"~Scheduled\" )\n| extend output = substring(message,1)\n| summarize by message, output\n| project output",
              "timeAggregation": "Count",
              "operator": "GreaterThan",
              "threshold": 0.0,
              "failingPeriods": {
                "numberOfEvaluationPeriods": 1,
                "minFailingPeriodsToAlert": 1
              }
            }
          ]
        },
        "actions": {
          "actionGroups": [
            "[parameters('actionGroups_StartStopV2_VM_Notification_externalid')]"
          ]
        }
      }
    }
  ]
}